<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Logo"
        android:layout_alignParentLeft="true"
        android:id="@+id/dropList"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Seleccione una estación"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <Spinner
            android:id="@+id/static_spinner"
            android:layout_width="fill_parent"
            android:spinnerMode="dialog"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/imageView"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Últimos datos de la Estación"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView4" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bordes"
            android:layout_weight="0.10"
            android:layout_marginBottom="-10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Hora"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="80dp"
                android:layout_alignTop="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/textView10"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00:00:00"
                android:id="@+id/hora"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fecha"
                android:textStyle="bold"
                android:id="@+id/textView7"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/fecha"
                android:layout_alignRight="@+id/fecha"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00-00-00"
                android:id="@+id/fecha"
                android:layout_marginRight="80dp"
                android:layout_alignTop="@+id/hora"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Temp Exterior"
                android:textStyle="bold"
                android:id="@+id/textView8"
                android:layout_below="@+id/hora"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00 °C"
                android:id="@+id/tExterior"
                android:layout_below="@+id/textView8"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignRight="@+id/textView8"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Temp Interior"
                android:textStyle="bold"
                android:id="@+id/textView9"
                android:layout_below="@+id/tExterior"
                android:layout_alignLeft="@+id/tExterior"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00 °C"
                android:id="@+id/tInterior"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignRight="@+id/tExterior" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Hum Exterior"
                android:textStyle="bold"
                android:id="@+id/textView10"
                android:layout_alignTop="@+id/textView8"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Hum Interior"
                android:textStyle="bold"
                android:id="@+id/textView11"
                android:layout_alignTop="@+id/textView9"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00 %"
                android:id="@+id/hExterior"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00 %"
                android:id="@+id/hInterior"
                android:gravity="center_horizontal"
                android:layout_alignTop="@+id/tInterior"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Presión"
                android:textStyle="bold"
                android:id="@+id/textView12"
                android:layout_alignTop="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0000.00 hPa"
                android:id="@+id/presion"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView12"
                android:layout_alignRight="@+id/textView12"
                android:layout_alignLeft="@+id/textView12" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Radiación"
                android:textStyle="bold"
                android:id="@+id/textView13"
                android:gravity="center_horizontal"
                android:layout_alignTop="@+id/textView11"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0000 W/m²"
                android:id="@+id/rSolar"
                android:gravity="center_horizontal"
                android:layout_alignTop="@+id/hInterior"
                android:layout_alignRight="@+id/textView13"
                android:layout_alignLeft="@+id/textView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Direc. Viento"
                android:textStyle="bold"
                android:id="@+id/textView14"
                android:layout_below="@+id/tInterior"
                android:layout_alignLeft="@+id/tInterior"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="000 X"
                android:id="@+id/dViento"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView14"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignRight="@+id/textView14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Inten. Viento"
                android:textStyle="bold"
                android:id="@+id/textView15"
                android:layout_alignTop="@+id/textView14"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00.0 kts"
                android:id="@+id/intViento"
                android:gravity="center_horizontal"
                android:layout_alignTop="@+id/dViento"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignRight="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Viento Prom"
                android:textStyle="bold"
                android:id="@+id/textView16"
                android:layout_alignTop="@+id/textView15"
                android:layout_alignRight="@+id/rSolar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00.0 kts"
                android:id="@+id/vBase"
                android:gravity="center_horizontal"
                android:layout_alignTop="@+id/intViento"
                android:layout_alignRight="@+id/textView16"
                android:layout_alignLeft="@+id/textView16" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="#DDDDDD"
        android:id="@+id/Logo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Estaciones Meteorologicas"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/conaf"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/logoconaf"
        android:layout_margin="10dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/armada"
        android:src="@drawable/armada"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:id="@+id/uplafi"
        android:src="@drawable/uplafi"
        android:layout_above="@+id/conaf"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
